    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LaskuriApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="truckButton" Content="Trucks" HorizontalAlignment="Left" Margin="519,192,0,0" VerticalAlignment="Top" Click="truckButton_Click"/>
        <Button x:Name="carButton" Content="Cars" HorizontalAlignment="Left" Margin="663,192,0,0" VerticalAlignment="Top" Click="carButton_Click"/>
        <TextBox x:Name="truckTextBox" HorizontalAlignment="Left" Margin="510,291,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>
        <TextBox x:Name="carTextBox" HorizontalAlignment="Left" Margin="663,291,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>

    </Grid>
</Page>
